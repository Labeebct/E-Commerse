<%- include('../components/head.ejs') %>
   <div class="wrapper productopen_wrapper">
    <%- include('../components/top_nav.ejs') %>
    <form action="">
         <div class="content productopen_content">
            <div class="main_frame">
               <div class="product_frame">
                  <div class="img_frame">
                     <button type="button" class="prev_next_btn"><i class="bi left_right_icon bi-caret-left"></i></button>
                     <div>
                     <img src="<%= product.productimg[0] %>" class="product_image_img" alt="">
                   </div>
                   <button type="button" class="prev_next_btn"><i class="bi left_right_icon bi-caret-right"></i></button>
                  </div>
                  <div class="img_position" style="display: flex; width: 100%; justify-content: space-evenly; margin-bottom: 1rem;">
                     <% product.productimg.forEach((img) => { %>
                        
                        <div style="width: 5rem;  border-radius: 0%; cursor: pointer; border: 1px solid rgba(115, 115, 115, 0.277); border-radius: .2rem; overflow: hidden;"><img src="<%= img %>" style="width: 100%; height: 100%;" alt=""></div>
                        
                   <% }) %>
                  </div>
               </div>
               <div class="product_detail_frame">
                  <ul>
                     <li style="font-size: 1.3rem; font-family: 'Poppins',sans-serif; font-weight: 600; color: white;"><%= product.productname %></li>

                     <!-- ================================================================= -->

                     <li style="display: flex; gap: .7rem; align-items: center;">
                        <p class="old_price"><i class="bi bi-currency-rupee"></i><%= product.oldprice.toLocaleString() %></p>
                        <p class="new_price"><i class="bi bi-currency-rupee"></i><%= product.newprice.toLocaleString() %></p>
                        <p class="discount">80%</p>
                     </li>

                    <!-- ========================================== -->

                    
                     <li style="display: flex; gap: .7rem; align-items: center; height: 2rem;">
                        <span style="display: flex; align-items: center; font-family: 'sans-serif'; ">Return <span  style="color: red; padding-top: .3rem; font-size: 1.3rem;"><i class="bi bi-x"></i></span></span>
                        <span style="display: flex; align-items: center; font-family: 'sans-serif'; ">Availabe<span  style="color: rgb(0, 201, 0); padding-top: .3rem; font-size: 1.4rem;"><i class="bi bi-check"></i></span></span>
                     </li>

   
                     <!-- ===================================== -->

                     <li style="font-family: 'Poppins',sans-serif; height: 2.5rem;">
                        Rating : ⭐⭐⭐⭐⭐
                     </li>

 
                     <!-- =========================================================== -->
                     <li class="size_li">
                        <p style="font-family: 'Poppins',sans-serif; font-weight: 600; color: rgba(255, 255, 255, 0.947);">SIZE :</p>
                        <span class="label_span">
                         <input id="s" value="s" name="size" type="radio" >
                        <label for="s" >S</label>
                        </span>
                        
                        <span class="label_span">
                        <input id="m" name="size" type="radio">
                        <label for="m">M</label>
                        </span>
                         
                        <span class="label_span">
                        <input id="l" name="size" type="radio">
                        <label for="l">L</label>
                     </span>

                     <span class="label_span">
                        <input id="xl" name="size" type="radio">
                        <label for="xl">XL</label> 
                     </span>
                     </li>

                     <!-- ======================================== -->

                     <li class="color_li">
                        <p style="font-family: 'Poppins',sans-serif; font-weight: 600; color: rgba(255, 255, 255, 0.947);">COLOR :</p>
                        <span style="background-color:black;" class="label_span_color">
                        <input  id="black" name="color" value="black" type="radio" >
                        <label for="black" ></label>
                        </span>
                        
                        <span style="background-color: red;" class="label_span_color">
                        <input id="red" name="color" value="red" type="radio">
                        <label for="red"></label>
                        </span>
                         
                        <span style="background-color: green;" class="label_span_color">
                        <input id="green" name="color" value="green" type="radio">
                        <label for="green"></label>
                     </span>

                     <span style="background-color: orange;" class="label_span_color">
                        <input id="orange" name="color" value="orange" type="radio">
                        <label for="orange"></label> 
                     </span>

                     <span style="background-color: blue;" class="label_span_color">
                        <input id="blue" name="color" value="blue" type="radio">
                        <label for="blue"></label> 
                     </span>

                     <span style="background-color: yellow;" class="label_span_color">
                        <input id="yellow" name="color" value="yellow" type="radio">
                        <label for="yellow"></label> 
                     </span>
                     </li>

                     <!-- =================================================== -->

                     <li>
                        <div style="display: flex; gap: 1rem; align-items: center;">
                           <select  name="quantity" style="outline: none; padding: .3rem;">
                              <option value="1">Qty:1</option>
                              <option value="2">Qty:2</option>
                              <option value="3">Qty:3</option>
                              <option value="4">Qty:4</option>
                              <option value="5">Qty:5</option>
                           </select>
                           <div class="stock_left">Hurry only <%= product.stock %> LEFT</div>
                        </div>
                     </li>


                     <!-- ======================================= -->



                     <li style="height: 10rem; flex-direction: column; align-items: start; gap: .3rem;">
                        <p class="disc_p">Description</p>
                        <div class="discription_frame">
                           <%= product.description %>
                        </div>
                     </li>

                     <!-- ======================================================= -->



                     <li style="height: 4rem;">
                        <p style="font-family:'Times New Roman', Times, serif;">Delivery Within <span style="color: rgb(0, 179, 0);"><%= product.deliverywithin %> Days</span></p>
                     </li>

                     <!-- =================================================================== -->

                     <li class="btn_li" style="display: flex; height: 3rem; justify-content: space-between; width: 90%;">
                        <button type="submit">Buy Now</button>
                        <button type="submit">Add To Cart</button>
                     </li>

                  </ul>
               </div>
            </form>
            </div>                  
         </div>
         <%- include('../../common/footer.ejs') %>
   </div>
<%- include('../../common/end.ejs') %>